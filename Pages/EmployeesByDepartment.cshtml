@page
@model W02_EF.Pages.EmployeesByDepartmentModel
@{
    ViewData["Title"] = "Employees By Department";
}

<h1 class="mb-3">Employees by Department</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Department</th>
            <th>Employees (ID + Name)</th>
        </tr>
    </thead>
    <tbody>
@foreach (var dept in Model.Departments)
{
        <tr>
            <td>
                <strong>@dept.DepartmentId</strong> - @dept.DepartmentName
            </td>
            <td>
                @if (dept.Employees != null && dept.Employees.Any())
                {
                    <ul class="mb-0">
                    @foreach (var emp in dept.Employees.OrderBy(e => e.EmployeeId))
                    {
                        <li>@emp.EmployeeId - @emp.FirstName @emp.LastName</li>
                    }
                    </ul>
                }
                else
                {
                    <span class="text-muted">(none)</span>
                }
            </td>
        </tr>
}
    </tbody>
</table>
